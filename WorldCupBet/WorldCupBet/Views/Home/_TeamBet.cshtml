<div id="teamBetModal" class="modal modal-fixed-footer">
    <div class="modal-content">
        <h4 class="header">ĐẶT KÈO THEO TRẬN</h4>
        <span id='teamBet_teamInfo'></span>
        <h5 class="header">
            <strong>TỈ LỆ CHẤP:</strong> &nbsp;
            <span id="teamBet_Odds">
            </span>
        </h5>
        <h6 class="header" id="teamBet_explainOdds"></h6>
        <div class="row">
            <div class="col s12 input-field">
                <h5 class="header">CHỌN ĐỘI MUỐN CƯỢC</h5>
                <div class="col s12 m6">
                    <label>
                        <input name="BetTeam" type="radio" value="1" />
                        <span id="teamBet_team1"></span>
                    </label>
                    <h5 class="header" id="teamBet_paidRate1"></h5>
                </div>
                <div class="col s12 m6">
                    <label>
                        <input name="BetTeam" type="radio" value="2" />
                        <span id="teamBet_team2"></span>
                    </label>
                    <h5 class="header" id="teamBet_paidRate2"></h5>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col s12 input-field">
                <i class="material-icons prefix">attach_money</i>
                <input id="teamBet_userBalance" type="text" value="0 đ" disabled>
                <label for="teamBet_userBalance">Số dư tài khoản</label>
            </div>
        </div>
        <div class="row">
            <div class="col s12 input-field">
                <i class="material-icons prefix">attach_money</i>
                <input id="teamBet_betAmount" type="text" name="BetAmount" maxlength="7">
                <label for="teamBet_betAmount">Số tiền đặt kèo (10.000 - 300.000 đ)</label>
            </div>
        </div>
        <div class="row" id="teamBet_statusArea">
            <div class="col s12">
                <i class="material-icons" id="teamBet_statusIcon"></i>
                <span id="teamBet_betStatusMessage"></span>
            </div>
        </div>
    </div>
    <!--hidden values-->
    <input type="hidden" id="teamBet_matchId" name="MatchId" />
    <input type="hidden" id="teamBet_betStatus" name="BetStatus" />
    <div class="modal-footer">
        <button id="teamBet_betBtn" class="waves-effect waves-green btn">Đặt kèo<i class="material-icons right">send</i></button>
        <button id="teamBet_closeBtn" class="modal-close waves-effect waves-green btn-flat">Đóng</button>
    </div>
</div>
