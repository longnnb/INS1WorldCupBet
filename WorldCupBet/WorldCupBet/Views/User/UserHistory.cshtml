@model IEnumerable<Entities.ViewModels.UserHistory>

@{
    ViewBag.Title = "Lịch sử giao dịch";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <div class="card">
        <div class="card-content">
            <h4>Lịch sử giao dịch</h4>
            <table class="table">
                <tr>
                    <th style="width:20%;">
                        Thời gian
                    </th>
                    <th style="width:80%;">
                        Nội dung giao dịch
                    </th>
                </tr>

                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @item.Time.ToString("dd/MM/yyyy HH:mm:ss")
                        </td>
                        <td>
                            @Html.Raw(item.Content)
                        </td>
                    </tr>
                }

            </table>
        </div>
    </div>
</div>
<br /><br />