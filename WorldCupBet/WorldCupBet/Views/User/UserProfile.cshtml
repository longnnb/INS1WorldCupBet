@model Entities.SessionModels.CurrentUser

@{
    ViewBag.Title = "Trang cá nhân";
}


<!--Body here-->
<div class="section no-pad-bot">
    <div class="container">
        <div class="row">
            <div class="col s12">
                <div class="card">
                    <div class="card-content">
                        <div class="row">
                            <div class="col s12 input-field">
                                <i class="material-icons prefix">person</i>
                                <input id="username" type="text" value="@Model.Username" disabled>
                                <label for="username">Tên đăng nhập</label>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col s12 input-field">
                                <i class="material-icons prefix">person</i>
                                <input id="fullname" type="text" value="@Model.Fullname" disabled>
                                <label for="fullname">Họ và tên</label>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col s12 input-field">
                                <i class="material-icons prefix">attach_money</i>
                                <input id="money" type="text" value="@(Model.Balance)" disabled>
                                <label for="money">Số dư tài khoản</label>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col s12">
                                <a id="btn-log-out" href="/Home/Logoff" class="btn-flat right">Đăng xuất</a>
                                <a id="btn-change-password" href="/User/ChangePassword" class="btn right">Đổi mật khẩu</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!--End Body-->
@section styles{
    <link href="~/Content/css/custom/profile.css" rel="stylesheet" />
}

@section scripts{
    <script>
        var formatMoney = parseInt($('#money').val().replace(/\D/g, ''), 10).toLocaleString("it-IT");
        $('#money').val(formatMoney + " đ");
    </script>
}