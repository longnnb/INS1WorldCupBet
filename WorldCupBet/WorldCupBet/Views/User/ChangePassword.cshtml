@{
    ViewBag.Title = "Đổi mật khẩu";
}
<div class="section no-pad-bot">
    <div class="container">
        <div class="row center">
            <div class="col s12 m8 offset-m2 l6 offset-l3">
                <div class="card z-depth-5">
                    <div class="card-content">
                        <div class="card-title center primary-text-color">Đổi mật khẩu</div>
                        @if (TempData["IsFirstLogin"] != null && (bool)TempData["IsFirstLogin"] == true)
                        {
                            <div>Đây là lần đăng nhập đầu tiên, bạn cần đổi mật khẩu.</div>
                            <input type="hidden" value="true" id="isFirstLogin" />
                        }
                        @using (Html.BeginForm())
                        {
                            <div class="row">
                                <div class="col s12 input-field">
                                    <i class="material-icons prefix">lock</i>
                                    <input id="oldPassword" type="password" name="oldPassword">
                                    <label for="oldPassword">Mật khẩu cũ</label>
                                </div>
                                <div class="col s12 input-field">
                                    <i class="material-icons prefix">lock</i>
                                    <input id="newPassword" type="password" name="newPassword">
                                    <label for="newPassword">Mật khẩu mới</label>
                                </div>
                                <div class="col s12 input-field">
                                    <i class="material-icons prefix">lock</i>
                                    <input id="confirmPassword" type="password" name="confirmPassword">
                                    <label for="confirmPassword">Xác nhận mật khẩu</label>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col s12">
                                    <button class="btn" id="submit-btn">Đổi mật khẩu</button>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section scripts {
    <script src="~/Scripts/js/custom/change-password.js"></script>
}